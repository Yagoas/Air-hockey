        size_hint: 0.3, 0.15
    	background_normal: 'img/menu-btn-normal.png'
        background_down: 'img/menu-btn-pressed.png'
        on_release:
            root.manager.transition.direction = 'right'
            root.manager.current = 'menu'

<Bola>:
    size: 50, 50
    canvas:
        Ellipse:
            source: 'img/bola.png'
            pos: self.pos
            size: self.size

<Raquete>:
    size: 90, 90
    canvas:
        Ellipse:
            source: 'img/raquete.png'
            pos:self.pos
            size:self.size

<Pong>:
    bola: bola
    raquete_1: raquete_esquerda
    raquete_2: raquete_direita

    canvas:
        Rectangle:
            source: 'img/campo.png'
            size: self.width, self.height

    Label:
        font_size: 17
        center_x: root.width/4
        top: root.top + 35
        text: "Player 1"
        color: (1,1,1,1)

    Label:
        font_size: 17
        center_x: root.width * 3/4
        top: root.top + 35
        text: "Player 2"
        color: (1,1,1,1)

    Label:
        font_size: 50
        center_x: root.width/4
        top: root.top + 12
        text: str(root.raquete_1.placar)
        color: (1,1,1,1)	# deixa na cor branca

    Label:
        font_size: 50
        center_x: root.width * 3/4
        top: root.top + 12
        text: str(root.raquete_2.placar)
        color: (1,1,1,1)

    Bola:
        id: bola
        center_y: root.center_y + 25  # nova posição para o novo campo; o mesmo para as raquetes
	    center_x: root.center_x

    Raquete:
        id: raquete_esquerda
        x: root.x
        source: 'img/raquete_1.png'
        center_y: root.center_y + 25

    Raquete:
        id: raquete_direita
        x: root.width-self.width
        center_y: root.center_y + 25

    Button:
        id: inicia_jogo_btn
        size: 180, 45
        pos: root.width/6, 6 
	    background_normal: 'img/iniciar-jogo-btn-normal.png'
	    background_down: 'img/iniciar-jogo-btn-pressed.png'
        center_x: root.width/6
        on_release:
            root.remove_btn(self)
            root.comeca_jogo()
            reinicia_jogo_btn.center_x = 1 * root.width/4
            menu_btn.center_x = 3 * root.width/4

    Button:
        id: reinicia_jogo_btn
        size: 180, 45
	    pos: 3 * root.width/6, 6
    	background_normal: 'img/reiniciar-btn-normal.png'
        background_down: 'img/reiniciar-btn-pressed.png'
        center_x: 3 * root.width/6
        on_press:
            root.reinicia_jogo()

    Button:
        id: menu_btn
        size: 180, 45
	    pos: 5 * root.width/6, 6
    	background_normal: 'img/menu-btn-normal.png'
        background_down: 'img/menu-btn-pressed.png'
        center_x: 5 * root.width/6
        on_press:
            root.screen_manager.transition.direction = "right"
            root.screen_manager.current = "menu"
            root.servico(vel=(0, 0))
            root.raquete_1.placar = 0  # essa linha e a de baixo fazem o placar zerar
            root.raquete_2.placar = 0

